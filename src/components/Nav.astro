---
import astroLogo from "../assets/astro.svg";
import background from "../assets/background.svg";
---

<nav
  class="fixed top-0 md:top-auto md:bottom-0 md:right-0 w-full md:w-max z-10 py-3 md:py-6 px-6 md:rounded-tl shadow-md md:shadow-lg"
>
  <ul class="flex md:flex-col justify-between items-center md:gap-6">
    <li>
      <a href="#headline" class="inline-block relative md:my-2">
        <span
          class="block absolute -inset-1 -skew-x-3 bg-[#5297d8] -rotate-6"
          aria-hidden="true"></span>
        <span class="block relative text-white font-semibold -rotate-6"
          >uzzielkyle</span
        >
      </a>
    </li>
    <li>
      <a href="#about-me">
        <span
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="#0d1822"
            class="size-10"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z"
            ></path>
          </svg>
        </span>
      </a>
    </li>
    <li>
      <a href="#skills">
        <span class="hidden">Skills</span>
        <span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="#0d1822"
            class="size-10"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M14.25 9.75 16.5 12l-2.25 2.25m-4.5 0L7.5 12l2.25-2.25M6 20.25h12A2.25 2.25 0 0 0 20.25 18V6A2.25 2.25 0 0 0 18 3.75H6A2.25 2.25 0 0 0 3.75 6v12A2.25 2.25 0 0 0 6 20.25Z"
            ></path>
          </svg>
        </span>
      </a>
    </li>
    <li>
      <a href="#projects">
        <span class="hidden">Projects</span>
        <span
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="#0d1822"
            class="size-10"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="m20.25 7.5-.625 10.632a2.25 2.25 0 0 1-2.247 2.118H6.622a2.25 2.25 0 0 1-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125Z"
            ></path>
          </svg>
        </span>
      </a>
    </li>
  </ul>
</nav>

